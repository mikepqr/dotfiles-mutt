[general]
accounts = mpe
ui = blinkenlights
pythonfile = ~/usr/bin/get_pw.py

[Account mpe]
localrepository = localmpe
remoterepository = remotempe
presynchook = imapfilter
postsynchoot = notmuch new

[Repository localmpe]
type = Maildir
localfolders = ~/.mail/mpe

[Repository remotempe]
type = IMAP
remotehost = imaps.mpe.mpg.de
remoteuser = williams
ssl = yes
# readonly = True
nametrans = lambda foldername: re.sub('^INBOX.', '', foldername)
maxconnections = 5
remotepasseval = get_pw("imaps.mpe.mpg.de")

[Account oxford]
localrepository = localoxford
remoterepository = remoteoxford

[Repository localoxford]
type = Maildir
localfolders = ~/.mail/oxford

[Repository remoteoxford]
type = IMAP
remotehost = mail.physics.ox.ac.uk
remoteuser = WilliamsMi@physics.ox.ac.uk
remotepasseval = get_pw("mail.physics.ox.ac.uk")
ssl = yes
maxconnections = 5
readonly = True
folderfilter = lambda foldername: foldername not in ['Contacts', 'Calendar', 'Journal', 'Outbox', 'Notes', 'Tasks', 'Trash', 'Junk E-mail', 'Deleted Items']

[Account pentangle]
localrepository = localpentangle
remoterepository = remotepentangle

[Repository localpentangle]
type = Maildir
localfolders = ~/.mail/pentangle

[Repository remotepentangle]
type = IMAP
remotehost = s16889.gridserver.com
remoteuser = mike@pentangle.net
ssl = yes
readonly = True
nametrans = lambda foldername: re.sub('^INBOX.', '', foldername)
folderfilter = lambda foldername: foldername not in ['Apple Mail To Do']
maxconnections = 5

[mbnames]
enabled = yes
filename = ~/.mutt/mailboxes
header = "mailboxes "
peritem = "+%(foldername)s"
sep = " "
footer = "\n"

